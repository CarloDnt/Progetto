<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AED581"
    android:orientation="vertical"
    tools:context=".ui.AggiungiProdotto">


    <ImageButton
        android:id="@+id/camera"
        android:layout_width="188dp"
        android:layout_height="172dp"
        android:layout_gravity="center"
        android:background="@drawable/roundbutton"
        android:backgroundTint="#81C784"
        android:scaleType="fitCenter"
        app:srcCompat="@android:drawable/ic_menu_camera"></ImageButton>


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nome Prodotto" />

    <EditText
        android:id="@+id/etPNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Data di Scadenza" />

    <DatePicker
        android:id="@+id/etPScadenza"
        android:layout_width="match_parent"
        android:layout_height="129dp"
        android:calendarViewShown="false"
        android:datePickerMode="spinner"
        android:ems="10"
        android:inputType="date" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Prezzo" />

    <EditText
        android:id="@+id/etPPrezzo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="QuantitÃ " />

    <EditText
        android:id="@+id/etPQuantita"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/addPro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#AEE681"
        android:text="DONE" />

</LinearLayout>