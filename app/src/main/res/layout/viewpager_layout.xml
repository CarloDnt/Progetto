<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:backgroundTint="@color/secondaryColor"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="@dimen/common_10_dp"
        android:layout_marginEnd="@dimen/common_10_dp"
        android:background="@color/secondaryColor"
        android:backgroundTint="@color/secondaryColor"
        android:orientation="horizontal"
        android:elevation="@dimen/common_10_dp">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/image_view"
            android:layout_width="226dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/common_10_dp"
            android:layout_marginBottom="@dimen/common_10_dp"
            android:layout_weight="0"
            android:scaleType="centerCrop"
            android:src="@drawable/photo"
            app:civ_border_color="#00000000"
            app:civ_border_width="1dp" />

        <LinearLayout
            android:layout_width="183dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/nome_prodotto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome Prodotto" />

            <TextView
                android:id="@+id/nome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/data_scadenza"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Data Scadenza" />

            <TextView
                android:id="@+id/et_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1/1/01"
                android:textSize="20sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>