<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="250dp"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@color/secondaryColor"
    android:backgroundTint="@color/secondaryColor"
    android:elevation="@dimen/common_30_dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_20_dp"
        android:background="@color/secondaryDarkColor"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prodotto In Scadenza"
            android:gravity="center"/>
    </LinearLayout>

    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/imgDialog"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="@dimen/common_25_dp"
        android:layout_marginBottom="@dimen/common_10_dp"
        android:layout_weight="0"
        android:scaleType="centerCrop"
        android:src="@drawable/photo"
        app:civ_border_color="#00000000"
        app:civ_border_width="1dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/common_25_dp"
        android:textColor="@color/secondaryTextColor"
        android:layout_marginTop="@dimen/common_10_dp"
        android:text="Nome Prodotto"
        android:id="@+id/npDialog"
        android:gravity="center"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/common_15_dp"
        android:textColor="@color/secondaryTextColor"
        android:layout_marginTop="@dimen/common_10_dp"
        android:text="1 gen 2000"
        android:id="@+id/scaDialog"
        android:gravity="center"
        />

</LinearLayout>