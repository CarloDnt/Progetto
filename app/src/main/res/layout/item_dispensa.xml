<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="@dimen/common_5_dp">

    <LinearLayout
        android:id="@+id/riga_dispensa"
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:orientation="horizontal"
        >

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/imgProdotto"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/common_15_dp"
            android:layout_marginBottom="@dimen/common_15_dp"
            android:layout_weight="0"
            android:scaleType="centerCrop"
            android:src="@drawable/photo"
            app:civ_border_color="#00000000"
            app:civ_border_width="1dp" />

        <TextView
            android:id="@+id/textProdotto"
            android:layout_width="198dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="TextView"
            android:textColor="@color/secondaryTextColor"
            android:gravity="center_vertical"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/et_prodotto"
            android:layout_width="62dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:textColor="@color/secondaryTextColor"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/secondaryDarkColor"/>

</LinearLayout>