<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/roundedrectangle"
    android:backgroundTint="@color/primaryColor"
    android:elevation="@dimen/common_30_dp"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_20_dp"
        android:background="@color/secondaryDarkColor"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Aggiungi Nuova Nota"
            android:textSize="20dp"
            android:textColor="@color/secondaryTextColor" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/npDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_20_dp"
            android:gravity="center"
            android:text="Nome Prodotto"
            android:textColor="@color/secondaryTextColor"
            android:textSize="@dimen/common_20_dp" />

        <EditText
            android:id="@+id/nomeNota"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:inputType="text" />

        <TextView
            android:id="@+id/scaDialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_10_dp"
            android:gravity="center"
            android:text="Quantita'"
            android:textColor="@color/secondaryTextColor"
            android:textSize="@dimen/common_20_dp" />

        <EditText
            android:id="@+id/quantitaNota"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:inputType="number" />
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/common_20_dp"
        android:layout_gravity="bottom"
        android:background="@color/secondaryDarkColor"
        android:orientation="horizontal">

        <Button
            android:id="@+id/noNote"
            android:layout_width="99dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:background="@color/secondaryDarkColor"
            android:text="Annulla"
            android:textSize="@dimen/common_20_dp"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/addNote"
            android:layout_width="99dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:background="@color/secondaryDarkColor"
            android:text="Accetta"
            android:textSize="@dimen/common_20_dp"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>