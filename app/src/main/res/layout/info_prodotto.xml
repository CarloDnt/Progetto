<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/info_prodotto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <ImageView
            android:id="@+id/info_foto"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:srcCompat="@android:drawable/btn_radio" />
        <TextView
            android:id="@+id/info_nome"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="150dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="210dp">

        <LinearLayout
            android:layout_width="205dp"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/text_quantità"
                android:layout_width="match_parent"
                android:layout_height="60dp" />
            <TextView
                android:id="@+id/text_scadenza"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"/>
            <TextView
                android:id="@+id/text_prezzo"
                android:layout_width="match_parent"
                android:layout_height="60dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="205dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="205dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/info_quantità"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:ems="10"
                android:inputType="number" />

            <EditText
                android:id="@+id/info_scadenza"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:ems="10"
                android:inputType="date" />

            <EditText
                android:id="@+id/info_prezzo"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:ems="10"
                android:inputType="number" />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

    </RelativeLayout>

</LinearLayout>